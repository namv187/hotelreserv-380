<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
      alignment="CENTER" spacing="20" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f9f9f9;"
      fx:controller="org.hotel.hotelreservationtest.HelloController"
      
      >
   
   <!-- Top padding for space -->
   <padding><Insets top="20" /></padding>

   <!-- Date Pickers -->
   <HBox alignment="CENTER" spacing="20">
      <DatePicker promptText="Check In" />
      <DatePicker promptText="Check Out" />
   </HBox>

   <!-- Room and People Fields -->
   <HBox alignment="CENTER" spacing="20">
      <TextField promptText="Number of Rooms" />
      <TextField promptText="Number of People" />
   </HBox>

   <!-- Reserve Button -->
   <Button text="Reserve" style="-fx-background-color: #0078d7; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;"
         onAction="#onHelloButtonClick"

   />
   
</VBox>
